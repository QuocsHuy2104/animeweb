<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>StudyJSP</display-name>
	
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>com.hoclaptrinh.controller.web.HomeController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HomeController</servlet-name>
		<url-pattern>/trang-chu</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AdminController</servlet-name>
		<servlet-class>com.hoclaptrinh.controller.admin.HomeController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AdminController</servlet-name>
		<url-pattern>/admin-home</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>